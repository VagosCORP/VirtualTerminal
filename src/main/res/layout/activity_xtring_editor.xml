<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.vagoscorp.virtualterminal.XtringEditor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/VagosCORP"
        android:id="@+id/editorXdetails" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/newTX"
            android:text="@string/VagosCORP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/VagosCORP"
            android:visibility="gone"
            android:inputType="text">

            <requestFocus />

        </EditText>

        <EditText
            android:id="@+id/newTXtext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/VagosCORP"
            android:visibility="visible"
            android:inputType="textNoSuggestions">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/newTXnum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/Text_TXn"
            android:visibility="gone"
            android:inputType="number">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/newTXbin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/Text_TXb"
            android:visibility="gone"
            android:digits="01"
            android:inputType="number">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/newTXhex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/Text_TXh"
            android:visibility="gone"
            android:inputType="textNoSuggestions"
            android:digits="0123456789abcdefABCDEF">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/newTXint16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/Text_TXn"
            android:visibility="gone"
            android:inputType="number">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/newTXint32"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/Text_TXn"
            android:visibility="gone"
            android:inputType="number">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/newTXint64"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/Text_TXn"
            android:visibility="gone"
            android:inputType="number">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/newTXfloat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/Text_TXf"
            android:visibility="gone"
            android:inputType="numberDecimal|numberSigned">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/newTXdouble"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/Text_TXf"
            android:visibility="gone"
            android:inputType="numberDecimal|numberSigned">

            <requestFocus />
        </EditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/OK"
            android:id="@+id/update"
            android:onClick="updateXtringItem"/>
    </LinearLayout>

</LinearLayout>
